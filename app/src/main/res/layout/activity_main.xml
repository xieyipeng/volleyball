<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#cee002"
    tools:context="com2x3b4p.example.volleyball.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choose_jifen_view"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_anjian"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:src="@drawable/tubiao_jifen" />

                <Button
                    android:id="@+id/button_choose_jifen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:text="记   分"
                    android:textColor="#6e6d6d"
                    android:textSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/choose_shangchuan_view"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_anjian"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:src="@drawable/tubiao_chazhao" />

                <Button
                    android:id="@+id/button_choose_shangchuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:text="上     传"
                    android:textColor="#6e6d6d"
                    android:textSize="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_anjian">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:src="@drawable/tubiao_chazhao" />

                <Button
                    android:id="@+id/button_choose_chaxun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:text="查   询"
                    android:textColor="#6e6d6d"
                    android:textSize="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_anjian">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:src="@drawable/main_wode" />

                <Button
                    android:id="@+id/button_choose_wode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:text="我    的"
                    android:textColor="#6e6d6d"
                    android:textSize="50dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
